{% extends 'master.html.twig' %}
{% block content %}
    <div class="container">
        <form action="{{ path('add_new_ticket',{'id': event.id}) }}" method="POST"
              style="border: 1px solid black"
              class="col-sm-10 mt-5 mx-auto">

            <h5>Add new ticket</h5>
            {% if errors is defined %}
                {% for error in errors %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.message   }}
                    </div>
                {% endfor %}
            {% endif %}
            <div class="container">
                <div class="row">
                    <div class="col-sm-4"><label for="name">Name</label></div>
                    <div class="col-sm-8"><input type="text" name="name" id="name"></div>
                </div>
                <div class="row">
                    <div class="col-sm-4"><label for="description">Description</label></div>
                    <div class="col-sm-8"><input type="text" name="description" id="description"></div>
                </div>
                <div class="row">
                    <div class="col-sm-4"><label for="start_at">Start At</label></div>
                    <div class="col-sm-8"><input type="datetime-local" name="start_at" id="start_at"></div>
                </div>
                <div class="row">
                    <div class="col-sm-4"><label for="end_at">End at</label></div>
                    <div class="col-sm-8"><input type="datetime-local" name="end_at" id="end_at"></div>
                </div>
                <div class="row">
                    <div class="col-sm-4"><label for="price">Price</label></div>
                    <div class="col-sm-8"><input min="1" type="number" step="0.01" min="0" name="price" id="price"></div>
                </div>
                <div class="row">
                    <div class="col-sm-4"><label for="nums_of_ticket">Nums of ticket(s) this type </label></div>
                    <div class="col-sm-8"><input min="1" type="number" min="1" name="nums_of_ticket" id="nums_of_ticket"></div>
                </div>
                <div class="row">
                    <div class="col-sm-10"></div>
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-success m-2">Add</button>
                    </div>
                </div>


            </div>

        </form>
    </div>
{% endblock %}