{% extends 'master.html.twig' %}
{% block content %}
    <div class="container-fluid">
        <div class="row my-3">
            <div class="col-sm-11"></div>
            <div class="col-sm-1">
                <a href="{{ path('create_new_event')  }}" class="btn btn-success" >Create</a>
            </div>
        </div>
        <div class="row" >
            {% if events %}
                {%  for event in events %}

                    <div class="col-sm-3 event m-5">
                        <div class="event-actions">
                            <a class="btn btn-primary btn-sm rounded-circle custom-button" href="{{ path('show_event',{'id' : event.id})}}"><i class="fas fa-info"></i></a>
                            <a class="btn btn-warning btn-sm rounded-circle custom-button" href="{{ path('edit_event',{'id' : event.id})}}"><i class="fas fa-edit"></i></a>
                            <form action="{{ path('delete_event',{'id' : event.id}) }}" method="POST" style="display: inline">
                                <input type="hidden" name="_method" value="delete" />
                                <button class="btn btn-danger btn-sm rounded-circle custom-button" type="submit" ><i class="fas fa-trash"></i></button>
                            </form>
{#                            <a href="{{ path('delete_event',{'id' : event.id})}}"><i class="fas fa-trash"></i></a>#}
                        </div>
                        <div class="image">
{#                            {% set image_link =  %}#}
                            <img src="{{ asset('event/' ~ event.ImageLink) }}" alt="" class="event-image img-responsive">
                        </div>
                        <div class="event_info">
                            <h5>
                            {{ event.name }} -- {{ event.id }}
                            </h5>
                            Start :
                            {{ event.StartAt|date('Y-m-d h:i a') }}<br>
                            End :
                            {{ event.EndAt|date('Y-m-d h:i a') }}<br>

                            Location : {{ event.location }}<br>
                            Number of ticket(s) : {{ event.NumsOfTicket }}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}